<h1 id="titreReservation" class="h3 text-grey font-weight-bold text-center col-12 border-bottom p-2 m-0">Choisir le coiffeur</h1>
<div class="m-0 d-flex flex-column ">
	<div class="row d-flex justify-content-lg-around">
		{% for coiffeur in aCoiffeur %}
			<div class=" col-lg-3 team-member d-flex justify-content-center">
				<div class=" p-2 rounded-circle text-center d-flex flex-column">
					<img id="{{coiffeur.id}}" class="mx-auto rounded-circle d-block hoverWB coiffeurReservation" src="{{ asset('uploads/coiffeurs/' ~ coiffeur.file) }}" alt="" data-aos="zoom-in" data-aos-duration="1500" data-aos-delay="1000" />
					<h4 class="font-SHR text-grey m-0" class="my-3 text-grey font-SHR" data-aos="fade-down" data-aos-duration="1500" data-aos-delay="1300">{{coiffeur.username}}</h4>
				</div>
			</div>
		{% endfor %}
	</div>
	<div id="coiffeur_request"></div>
</div>
