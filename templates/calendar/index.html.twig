<div class="col-lg-10 col-sm-12 offset-lg-1 bg-fonce">
	<div class="col-12 text-center text-white font-weight-bold">Calendrier du {{dateFR}}</div>
	<div
		class="row">
		{# <div class="col-1 d-flex align-items-center"><img src="{{ asset('img/icons8-chevron-gauche-96.png') }}" alt="" id="left" class="cursor"/></div> #}
		<div id="block" class="col-lg-10 offset-lg-1 col-sm-12 d-flex horizontal-scrollable bg-fonce font-weight-bold text-white p-2">
			<div class="col-10 d-flex flex-column h-100 text-center">
				{% for rdv, hour in aDateHour %}
					<div class="d-flex">
						<div class="col-2">{{hour}}</div>
						{% for username, coiffeur in aCoiffeur %}
							<form action="/index.php/reservation/create/admin" enctype="multipart/form-data" class="formReservation col-4" method="POST">
								<div class="row col-12 p-0 mt-1 mb-1 mx-0 justify-content-center">
									<div style="display: none;">
										<input class="col-lg-12 p-2 animated border" value='{{coiffeur.id}}' type="number" name="coiffeur" required="required"/>
									</div>
									<div style="display: none;">
										<input class="col-lg-12 p-2 animated border" value="{{rdv}}" type="text" name="date"/>
									</div>
									{# {% if dates.dateData in indispos %} #}
									{# <div class="col-8 offset-2 input cursor-forbidden" style="text-decoration: line-through; padding: 3px 6px; border-color: rgb(118, 118, 118), rgb(195, 195, 195);">{{username}}</div> #}
									{% if rdv in coiffeur.reservations %}
										<div id="{{coiffeur.id}}_{{rdv}}" class="col-8 offset-2 p-1 m-0 bg-primary rounded text-white border font-weight-normal adminReservation">{{username}}
											<div id="user_request" class='d-flex flex-column'></div>
											<div id="{{coiffeur.id}}_{{rdv}}" class="bg-danger rounded text-white border font-weight-normal cursor adminDeleteReservation d-none">Suppr</div>
										</div>
									{% else %}
										<div id="{{rdv}}" class="col-8 offset-2 p-1 m-0 hoverBgBlue btn font-weight-bold border-white text-white adminCreateReservation">{{username}}
											<div
												class="d-none adminFormCreateDisplay row flex-column">
												{# <input class="m-1 p-2 animated border" placeholder="Nom" type="text" name="name"/> #}
												<input class="m-1 p-2 animated border" placeholder="Prenom" type="text" name="firstName"/>
												<input
												{# type="col-lg-10 offset-lg-1 m-1 p-2 anima    ted border" name="hour" value="{{hour}}" class="col-6 offset-3 hoverBgBlue"/> #}
											<input type="submit" name="valide" value="Reserver" class="col-8 offset-2 hoverBgBlue"/>
											</div>
										</div>
									{% endif %}
								</div>
							</form>
						{% endfor %}
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>
