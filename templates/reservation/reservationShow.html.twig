{% set continue = false %}
<div class="col-lg-10 col-sm-12 offset-lg-1 bg-fonce">
	<div class="d-flex justify-content-between">
		<div class="col-2 d-flex align-items-center"><img src="{{ asset('img/icons8-chevron-gauche-96.png') }}" alt="" id="left" class="cursor"/></div>
		<div class="col-6 offset-1 text-white text-center font-weight-bold border-bottom mb-2">Planning
			<br>
			{{coiffeur.username}}</div>
		<div id="right" class="col-2 offset-1 d-flex align-items-center mh-auto text-center cursor"><img src="{{ asset('img/icons8-chevron-droit-96.png') }}" alt="" weight="100" height="auto"/></div>
	</div>
	<div
		class="row">
		{# <div class="col-1 d-flex align-items-center"><img src="{{ asset('img/icons8-chevron-gauche-96.png') }}" alt="" id="left" class="cursor"/></div> #}
		<div id="block" class="col-lg-10 offset-lg-1 col-sm-12 d-flex horizontal-scrollable bg-fonce font-weight-bold text-white p-2">
			{% for dates in aDate %}
{#				{% if "dim." in dates.dateFr or "lun." in dates.dateFr %}#}
{#					{% set continue = true %}#}
{#				{% endif %}#}
				{% if not continue %}
					<div class="col-lg-3 col-sm-4 d-flex flex-column h-100 text-center">
						<div>
							{{dates.dateFr}}
						</div>
						{% if  today == dates.dateData  %}
							<div class="text-wrap mt-5">
								<div> Veuillez téléphoner au </div>
								<div class="text-success"> 06 22 39 13 20 </div>
								<div> pour réserver aujourd'hui </div>
							</div>
							{% set continue = true %}
						{% endif %}
						{% if not continue %}
							{% for rdv, hour in dates.hour %}
								<form action="/index.php/reservation/create" enctype="multipart/form-data" class="formReservation" method="POST">
									<div class="row col-12 p-0 mt-1 mb-1 mx-0 justify-content-center">
										<div style="display: none;">
											<input class="col-lg-12 p-2 animated border" value='{{coiffeur.id}}' type="number" name="coiffeur" required="required"/>
										</div>
										<div style="display: none;">
											<input class="col-lg-12 p-2 animated border" value="{{rdv}}" type="text" name="date"/>
										</div>
										{% if dates.dateData in indispos %}
											<div class="col-8 offset-2 input cursor-forbidden" style="text-decoration: line-through; padding: 3px 6px; border-color: rgb(118, 118, 118), rgb(195, 195, 195);">{{hour}}</div>
										{% elseif rdv in reservations %}
											<div class="col-8 offset-2 p-1 m-0 bg-danger rounded text-white border font-weight-normal cursor-forbidden">{{hour}}</div>
										{% else %}
											<input type="submit" name="valide" value="{{hour}}" class="col-8 offset-2 m-0 hoverBgBlue p-1 border rounded bg-white"/>
										{% endif %}
									</div>
								</form>
							{% endfor %}
						{% endif %}
					</div>
				{% endif %}
{#				{% if continue %}#}
{#					{% set continue = false %}#}
{#				{% endif %}#}
			{% endfor %}
		</div>
	</div>
</div>
